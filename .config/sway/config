# Sway config file
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!


####################
# Global Variables #
####################


# swaybg
set $swaybg "bash ~/.config/sway/scripts/swaybg.sh"

# swaylock-effects (daemonized)
set $swaylock "bash ~/.config/sway/scripts/swaylock.sh"

# Suspend Command
set $suspend "systemctl -i suspend-then-hibernate"

# Wob Socket
set $wobsock "$XDG_RUNTIME_DIR/wob.sock"

# Waybar
set $waybar "bash ~/.config/sway/scripts/waybar.sh"


####################
# Inputs / Outputs #
####################

# Inputs
# ------

# Touchpad
input "1267:12433:ELAN0504:01_04F3:3091_Touchpad" {
    accel_profile adaptive
    click_method clickfinger
    dwt enable
    natural_scroll enabled
    tap enabled
}

# Mouse
input "2362:9523:PixArt_OpticalMouse" accel_profile flat

# Outputs
# -------

# Set the default wallpaper.
exec_always $swaybg


#######################
# Workspace Behaviors #
#######################


# General
# -------

# Enable Xwayland for compatibility with X11 applications.
xwayland enable

# Set the default layout for new containers.
workspace_layout tabbed

# Set the default orientation for new workspaces.
default_orientation auto

# Stop mouse movements from stealing the focus.
focus_follows_mouse no


# Floating windows
# ----------------

# Nextcloud
for_window [app_id="com.nextcloud.desktopclient.nextcloud"] floating enable

# Firefox Pop-Ups
for_window [app_id="firefox" title="^$"] floating enable

# Wev
for_window [app_id="wev"] floating enable

# pavucontrol
for_window [app_id="pavucontrol"] floating enable

# KeePassXC Access Request
for_window [app_id="org.keepassxc.KeePassXC" title="Access\s*Request"] floating enable


# Idle Inhibition
# ---------------

# mpv
for_window [app_id="mpv"] inhibit_idle focus


##############
# Autostarts #
##############


# Start swayidle and swaylock for desktop idle and lock.
exec swayidle -w \
     timeout 480 "swaymsg 'output * dpms off'" resume "swaymsg 'output * dpms on'" \
     timeout 600 $swaylock \
     timeout 720 $suspend \
     before-sleep $swaylock

# Start a single instance of gammastep.
exec gammastep -l 0:0 -t 1900:1900 -g 1.2 -m wayland

# Start a single instance of Waybar.
exec_always $waybar

# Update D-Bus activation environemnt and restart
# some important services to enable screen-sharing.
exec dbus-sway-environment

# Start XDG autostart .desktop files using dex. See also
# Https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment sway

# Run wob for nice overlay bars.
exec rm -f $wobsock && mkfifo $wobsock && tail -f $wobsock | wob


###############
# Keybindings #
###############


# Super Key
set $super Mod4
# Alt Key
set $alt Mod1

# Navigation Keys
set $left h
set $down j
set $up k
set $right l

# Nagbar keys
set $exit e
set $reboot r
set $shutdown s
set $dismiss d

## Programs
# Terminal Emulator
set $term "foot"

# Menu Program
set $menu "rofi -show drun"


# Brightness and Volume
# ---------------------

## Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 2% \
    && light -G | cut -d . -f 1 > $wobsock
bindsym XF86MonBrightnessDown exec --no-startup-id light -N 2% && light -U 2% \
    && light -G | cut -d . -f 1 > $wobsock

## Volume
# Adjust sink volumes.
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --increase 2 \
    && pamixer --get-volume > $wobsock
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --decrease 2 \
    && pamixer --get-volume > $wobsock
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute \
    && (pamixer --get-mute && echo 0 > $wobsock) || pamixer --get-volume > $wobsock

# Adjust source volumes.
bindsym $alt+equal exec --no-startup-id pamixer --default-source --increase 2 \
    && pamixer --default-source --get-volume > $wobsock
bindsym $alt+minus exec --no-startup-id pamixer --default-source --decrease 2 \
    && pamixer --default-source --get-volume > $wobsock
bindsym $alt+BackSpace exec --no-startup-id pamixer --default-source --toggle-mute \
    && (pamixer --default-source --get-mute && echo 0 > $wobsock) \
    || pamixer --default-source --get-volume > $wobsock


# Sleep and Power
# ---------------

# Suspend on pressing the "Sleep" button.
bindsym Xf86Sleep exec --no-startup-id $suspend

# Suspend on laptop lid switch.
bindswitch --locked lid:on exec --no-startup-id $suspend

# Session control using swaynag.
mode "nagbar" {
    # Exit out of swaywm.
    bindsym $exit exit
    # Reboot the machine
    bindsym $reboot exec "systemctl -i reboot"
    # Shutdown the machine
    bindsym $shutdown exec "systemctl -i poweroff"
    # Quit out of the nagbar.
    bindsym $dismiss exec killall swaynag; mode "default"
}

bindsym $super+Shift+e exec swaynag -t "warning" -f "FantasqueSansMono Nerd Font" \
    -m "You pressed the exit shortcut. Select the action you want to perform." \
    -s "" -B "Shutdown ($shutdown)" "systemctl -i poweroff" \
    -B "Reboot ($reboot)" "systemctl -i reboot" \
    -B "Exit Sway ($exit)" "swaymsg exit" \
    -Z "Dismiss Nagbar ($dismiss)" "swaymsg mode default"; mode "nagbar"


# Defaults
# --------

# Use Mouse+$super to drag floating windows to their wanted position
floating_modifier $super

# Start a terminal
bindsym $super+Return exec $term

# Kill focused window
bindsym $super+Shift+q kill

# Start wofi menu.
bindsym $super+d exec $menu

# Change focus
bindsym $super+$left focus left
bindsym $super+$down focus down
bindsym $super+$up focus up
bindsym $super+$right focus right

# Alternatively, you can use the cursor keys:
bindsym $super+Left focus left
bindsym $super+Down focus down
bindsym $super+Up focus up
bindsym $super+Right focus right

# Move focused window
bindsym $super+Shift+$left move left
bindsym $super+Shift+$down move down
bindsym $super+Shift+$up move up
bindsym $super+Shift+$right move right

# Alternatively, you can use the cursor keys:
bindsym $super+Shift+Left move left
bindsym $super+Shift+Down move down
bindsym $super+Shift+Up move up
bindsym $super+Shift+Right move right

# Split in horizontal orientation
bindsym $super+b splith
# Split in vertical orientation
bindsym $super+v splitv

# Enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $super+s layout stacking
bindsym $super+w layout tabbed
bindsym $super+e layout toggle split

# Toggle tiling / floating
bindsym $super+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $super+space focus mode_toggle

# Focus the parent container
bindsym $super+a focus parent

# Focus the child container
bindsym $super+z focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $super+1 workspace number $ws1
bindsym $super+2 workspace number $ws2
bindsym $super+3 workspace number $ws3
bindsym $super+4 workspace number $ws4
bindsym $super+5 workspace number $ws5
bindsym $super+6 workspace number $ws6
bindsym $super+7 workspace number $ws7
bindsym $super+8 workspace number $ws8
bindsym $super+9 workspace number $ws9
bindsym $super+0 workspace number $ws10

# Move focused container to workspace
bindsym $super+Shift+1 move container to workspace number $ws1
bindsym $super+Shift+2 move container to workspace number $ws2
bindsym $super+Shift+3 move container to workspace number $ws3
bindsym $super+Shift+4 move container to workspace number $ws4
bindsym $super+Shift+5 move container to workspace number $ws5
bindsym $super+Shift+6 move container to workspace number $ws6
bindsym $super+Shift+7 move container to workspace number $ws7
bindsym $super+Shift+8 move container to workspace number $ws8
bindsym $super+Shift+9 move container to workspace number $ws9
bindsym $super+Shift+0 move container to workspace number $ws10

# Reload the configuration file.
bindsym $super+Shift+c reload

# Resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left resize shrink width 2 px or 2 ppt
        bindsym $down resize grow height 2 px or 2 ppt
        bindsym $up resize shrink height 2 px or 2 ppt
        bindsym $right resize grow width 2 px or 2 ppt

        # Same bindings, but for the arrow keys
        bindsym Left resize shrink width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize grow width 2 px or 2 ppt

        # Back to normal: Enter or Escape or $super+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $super+r mode "default"
}

bindsym $super+r mode "resize"


# Scratchpad
# ----------

# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $super+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $super+minus scratchpad show


# Utilities
# ---------

# Use Win+x to lock the screen.
bindsym $super+x exec $swaylock

# Use Alt+PageUp to start and Alt+PageDown to stop gammastep.
bindsym $alt+End exec --no-startup-id pkill -USR1 gammastep

## Screenshot commands
# File to save the screenshot to.
set $screenshot_file ~/Pictures/Screenshots/Screenshot_$(date +'%Y%m%d_%H%M%S').png

# Capture and save manually selected window.
bindsym Print exec grimshot save window $screenshot_file
# Capture and save manually selected area.
bindsym $super+Print exec grimshot save area $screenshot_file
# Capture and save active window.
bindsym $super+$alt+Print exec grimshot save active $screenshot_file
# Capture and save active output.
bindsym $super+Ctrl+Print exec grimshot save output $screenshot_file

# Capture and copy manually selected window.
bindsym Shift+Print exec grimshot copy window
# Capture and copy manually selected area.
bindsym $super+Shift+Print exec grimshot copy area
# Capture and copy active window.
bindsym $super+$alt+Shift+Print exec grimshot copy active
# Capture and copy active output.
bindsym $super+Ctrl+Shift+Print exec grimshot copy output


#########
# Theme #
#########


# Fonts
# -----

# Fonts for window titles.
font pango:monospace 11

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# Text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:NotoSans Nerd Font 11


# Colors
# ------

# class                 border   base     text     indicator  child_border
client.focused          #c0bfbc  #deddda  #000000  #c0bfbc    #5e5c64
client.focused_inactive #deddda  #ebebeb  #5e5c64  #deddda    #9a9996
client.unfocused        #ebebeb  #fafafa  #c0bfbc  #f6f5f4    #c0bfbc
client.urgent           #ae7b03  #e5a50a  #ffffff  #ae7b03    #e5a50a


# Borders
# -------

# Adjust the border of width and eliminate title bar.
default_border pixel 2px
default_floating_border pixel 2px

# Only enable borders if a workspace has more than one visible child.
smart_borders on


# Titlebars
# ---------
titlebar_padding 10 5


# Gaps
# ----

gaps inner 5

# Only enable gaps if a workspace has more than one child.
smart_gaps on


# Cursor
# ------

seat seat0 xcursor_theme capitaine-cursors-white 36
